#include <stdio.h>

int main()
{
    int i,c=0,f=0,d,n,result;
    printf("enter the even number\n");
    scanf("%d",&n);
    
    for(i=1;i<=n;i++)
    {
        if(i%2==0)
        {
            f=f+i;
        }
    }
    printf("sum of even numbers : %d\n",f);
    
    for(i=1;i<=n;i++)
    {
        if(i%2==1)
        {
            c=c+i;
        }
    }
    printf("sum of odd numbers : %d\n",c);
    
    {


     d=f-c;
    }
    printf("%d",d);

}
